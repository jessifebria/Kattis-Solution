import java.util.Scanner;

public class Kattis {
 
    public static void main(String[] args) {
        Scanner scan= new Scanner (System.in) ;
        while (true ){
        int miles;
        int waktu=0;
        int jumlah =0;
        int a= scan.nextInt();
        if (a == -1){
            break;
        }
            for (int i=1;i<=a;i++){
            int b= scan.nextInt();
            int c= scan.nextInt();
            miles = b* (c-waktu);
            jumlah += miles ;
            waktu= c;
            }
            System.out.println(jumlah + " miles");
        }
        
    
    }}
