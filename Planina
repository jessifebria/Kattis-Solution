
import java.util.Scanner;

public class Kattistry {

    public static void main(String[] args) {
        Scanner scan=new Scanner (System.in);
        int a=scan.nextInt();
        int b=2;
        for (int i = 1; i <= a; i++) {
             b= (b*2)-1 ;
        }
        System.out.println((b*b));
        
        
        
        }
    }
